
<%= form_for [@event, @event.items.build], remote: true, :html => { :class => 'form-horizontal' } do |f| %>
	<tr>
		<td><%= f.collection_select(:product_id, Product.all, :id, :name,  { :prompt => true },{:onchange => "buscaPrecio(this)"})  %></td>
		<td><%= f.text_field :quantity, placeholder: 'Cantidad'%></td>
		<td><%= f.text_field :price, placeholder: 'Valor' %></td>
		<td><%= f.submit 'Guardar', :class => 'btn btn-primary'%></td>
		<td></td>
	</tr>
<% end %>

