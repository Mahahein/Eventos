<br/><br/>
<h1 align="center">Lista de Pedidos</h1>
<table id="products" class="display">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cliente</th>
      <th>Fecha solicitud</th>
      <th>Fecha pedido</th>
      <th>Fecha retorno</th>
      <th>Total</th>     
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><center><%= link_to event.name, event_path(event) %></center></td>
        <td><center><%= event.customer.name %></center></td>
        <td><center><%= event.date_request.strftime("%d/%m/%Y") %></center></td>
        <td><center><%= event.start_at.strftime("%d/%m/%Y") %></center></td>
        <td><center><%= event.end_at.strftime("%d/%m/%Y") %></center></td>
        <td><center><%= event.totaldiscount %></td>
        <td><center><%= link_to 'Editar', edit_event_path(event), :class => 'btn btn-mini' %>
        <%= link_to 'Eliminar', event_path(event), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Â¿Confirma eliminar?')), :class => 'btn btn-mini btn-danger' %></center></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Agregar', new_event_path, :class => 'btn btn-primary' %>
