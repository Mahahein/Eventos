<br/><br/>

<dl class="dl-horizontal">
  <dt>Nombre:</dt>
  <dd><%= @customer.name %></dd>
  <dt>Direccion:</dt>
  <dd><%= @customer.address %></dd>
  <dt>Número:</dt>
  <dd><%= @customer.number %></dd>
  <dt>Ciudad:</dt>
  <dd><%= @customer.city%></dd>
  <dt>Email:</dt>
  <dd><%= @customer.email %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Volver', customers_path, :class => 'btn'  %>
  <%= link_to 'Editar', edit_customer_path(@customer), :class => 'btn' %>
  <%= link_to 'Eliminar', customer_path(@customer), :method => 'delete', :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Confirma eliminar?')), :class => 'btn btn-danger' %>
</div>
